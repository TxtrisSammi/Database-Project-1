<!-- Modal for creating new playlist -->
<div id="create-playlist-modal" class="modal hidden">
  <div class="modal-content">
    <h2>Create New Playlist</h2>
    <form id="create-playlist-form">
      <div class="form-group">
        <label for="playlist-name">Playlist Name *</label>
        <input type="text" id="playlist-name" required placeholder="My Filtered Playlist">
      </div>
      <div class="form-group">
        <label for="playlist-description">Description (optional)</label>
        <textarea id="playlist-description" rows="3" placeholder="Created from filtered tracks"></textarea>
      </div>
      <div class="form-group">
        <p id="track-count-display"></p>
      </div>
      <div class="modal-actions">
        <button type="submit" class="save-btn">Create Playlist</button>
        <button type="button" class="cancel-btn" onclick="closeCreatePlaylistModal()">Cancel</button>
      </div>
    </form>
  </div>
</div>
